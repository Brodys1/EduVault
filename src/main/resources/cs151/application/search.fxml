<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.ui.SearchController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label text="Search Student Profiles"
                   style="-fx-font-size:18px;-fx-font-weight:bold;"/>
            <HBox spacing="8">
                <TextField fx:id="searchField"
                           HBox.hgrow="ALWAYS"
                           promptText="Search by name, academic status, languages, databases, or role"/>
                <Button fx:id="searchButton" text="Search" />
                <Button fx:id="clearButton" text="Refresh" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backButton" text="Back to Home" />
                <Button fx:id="deleteButton" text="Delete Selected" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="resultsTable"
                   prefHeight="520"
                   prefWidth="1200"
                   BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colName" text="Full Name" prefWidth="150"/>
                <TableColumn fx:id="colStatus" text="Academic Status" prefWidth="120"/>
                <TableColumn fx:id="colLanguages" text="Languages" prefWidth="150"/>
                <TableColumn fx:id="colDatabases" text="Databases" prefWidth="150"/>
                <TableColumn fx:id="colPreferredRole" text="Preferred Role" prefWidth="120"/>
                <TableColumn fx:id="colComments" text="Comments" prefWidth="200"/>
                <TableColumn fx:id="colFlags" text="Flags" prefWidth="80"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="50"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <Label text="Tip: Press Enter in the search box to filter."/>
        </HBox>
    </bottom>
</BorderPane>
