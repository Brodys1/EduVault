<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.ui.StudentCommentsController"
            prefWidth="600" prefHeight="400">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="studentNameLabel" 
                   text="Comments for: Student Name"
                   style="-fx-font-size:16px;-fx-font-weight:bold;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="All Comments:" style="-fx-font-weight:bold;"/>
            <ListView fx:id="commentsListView" 
                     VBox.vgrow="ALWAYS"
                     prefHeight="280"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="15" left="15"/>
            </padding>
            <Button fx:id="closeButton" text="Close" prefWidth="80"/>
        </HBox>
    </bottom>

</BorderPane>
