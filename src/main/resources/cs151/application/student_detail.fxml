<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.ui.StudentDetailController"
            prefWidth="900" prefHeight="800">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <content>
                <VBox spacing="20" style="-fx-padding: 20;">
                    <Label text="Student Profile Details" style="-fx-font-size:24px; -fx-font-weight:bold;"/>
                    <VBox spacing="10">
                        <Label text="Basic Information" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                        <HBox spacing="10">
                            <Label text="Full Name:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="fullNameField" prefWidth="400" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Academic Status:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="academicStatusField" prefWidth="300" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Employment Status:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="employmentStatusField" prefWidth="300" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Job Details:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="jobDetailsField" prefWidth="500" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                    </VBox>
                    
                    <Separator/>
                    <VBox spacing="10">
                        <Label text="Skills and Interests" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                        <HBox spacing="10">
                            <Label text="Programming Languages:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="programmingLanguagesField" prefWidth="500" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Databases Known:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="databasesField" prefWidth="500" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Preferred Role:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="preferredRoleField" prefWidth="300" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                    </VBox>
                    
                    <Separator/>
                    <VBox spacing="10">
                        <Label text="Future Services Flags" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                        
                        <HBox spacing="10">
                            <Label text="Flag Status:" prefWidth="150" style="-fx-font-weight:bold;"/>
                            <TextField fx:id="flagsField" prefWidth="300" editable="false" 
                                       style="-fx-background-color: #f5f5f5;"/>
                        </HBox>
                    </VBox>
                    
                    <Separator/>
                    
                    <HBox spacing="20" style="-fx-padding: 20 0 0 0;">
                        <Button text="Close" onAction="#handleClose" style="-fx-font-size:14px; -fx-pref-width:100;"/>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
