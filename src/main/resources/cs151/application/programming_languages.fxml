<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.ui.ProgrammingLanguagesController"
            prefWidth="600" prefHeight="400">
    <children>
        <Label text="Name" layoutX="50" layoutY="130"/>
        <Label fx:id="headerLabel" text="Define Programming Languages" layoutX="50" layoutY="30" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <TextField fx:id="nameField" layoutX="250" layoutY="125" prefWidth="200"/>
        <Button text="Save"
                layoutX="250" layoutY="200"
                onAction="#handleSave"/>
        <Button text="Back"
                layoutX="320" layoutY="200"
                onAction="#handleBack"/>
    </children>

</AnchorPane>